<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RepositoryUrl>https://github.com/Krzaczek24/SqlToCsharpConsoleAppConverter</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageId>SqlToCsharpConsoleAppConverter</PackageId>
    <Version>1.0.0</Version>
    <Authors>Tomasz 'Krzaczek' Drewek</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="nlog.config" />
  </ItemGroup>

  <ItemGroup>
    <EditorConfigFiles Include="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EditorConfigFiles>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ConsoleAppParametersHandler" Version="1.0.0" />
    <PackageReference Include="NLog" Version="4.7.13" />
    <PackageReference Include="SqlToCsharpTranscriptor" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="example_script.sql">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
